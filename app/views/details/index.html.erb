<div style="background-color: blue">
<table  class="text-light table table-dark table-hover table-bordered table-responsive table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Email</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody >
  <% @details.each do |employee| %>
    <tr>
      <td><%= employee.detail.name %> </td>
      <td> <%= employee.detail.phone_number %> </td>
      <td> <%= employee.detail.email %> </td>
      <td> <%= link_to 'View', detail_path(employee.id), class:"btn btn-success"%> </td>
      <td> <%= link_to 'Edit', edit_detail_path(employee.id), class:"btn btn-info"%> </td>
      <td> <%= link_to 'Delete',detail_path(employee),data: { confirm: "This will delete the Employee. Are you sure?" }, method: :delete, class:"btn btn-danger" %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

</div>