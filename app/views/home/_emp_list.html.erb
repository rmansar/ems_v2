
<h2 style="text-align: center">Employee Listing page</h2>

<table style="border:1px solid black;margin-left:auto;margin-right:auto;">

  <style>
        table, td,th,tr {
            border: 1px solid black;
            width: 300px;
        }
  </style>
  <thead>
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Email</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody >
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.detail.name %> </td>
      <td> <%= employee.detail.phone_number %> </td>
      <td> <%= employee.detail.email %> </td>
      <td><button><%= link_to 'View', detail_path(employee.id), class:"btn btn-success"%></td></button>
      <td> <button><%= link_to 'Edit', edit_detail_path(employee.id), class:"btn btn-info"%> </td></button>
      <td> <%= button_to 'Delete',detail_path(employee),data: { confirm: "This will delete the Employee. Are you sure?" }, method: :delete, class:"btn btn-danger" %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>